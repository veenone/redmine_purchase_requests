<% content_for :header_tags do %>
  <%= stylesheet_link_tag 'purchase_requests', plugin: 'redmine_purchase_requests' %>
  <%= stylesheet_link_tag 'capex', plugin: 'redmine_purchase_requests' %>
  <style>
    .dashboard-container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(450px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }

    .dashboard-card {
      background-color: #fff;
      border-radius: 5px;
      box-shadow: 0 1px 3px rgba(0,0,0,.1);
      overflow: hidden;
      transition: box-shadow 0.3s ease;
    }

    .dashboard-card:hover {
      box-shadow: 0 3px 8px rgba(0,0,0,.15);
    }

    .dashboard-card-header {
      background-color: #f5f5f5;
      padding: 12px 15px;
      border-bottom: 1px solid #e5e5e5;
    }

    .dashboard-card-header h3 {
      margin: 0;
      font-size: 15px;
      color: #333;
    }

    .dashboard-card-body {
      padding: 15px;
    }

    .summary-stats {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }

    .stat-box {
      flex: 1;
      min-width: 200px;
      margin: 0 10px;
      text-align: center;
      background: #f8f9fa;
      padding: 20px;
      border-radius: 5px;
      border: 1px solid #dee2e6;
    }

    .stat-number {
      font-size: 28px;
      font-weight: bold;
      color: #28a745;
      margin-bottom: 5px;
    }

    .stat-label {
      font-size: 14px;
      color: #666;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .stat-currency {
      color: #007bff;
      font-weight: bold;
    }

    .dashboard-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }

    .dashboard-table th,
    .dashboard-table td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    .dashboard-table th {
      background-color: #f5f5f5;
      font-weight: bold;
      color: #333;
    }

    .dashboard-table tr:hover {
      background-color: #f9f9f9;
    }

    .status-indicator {
      display: inline-block;
      width: 12px;
      height: 12px;
      border-radius: 50%;
      margin-right: 5px;
    }

    .status-total { background-color: #28a745; }
    .status-utilized { background-color: #ffc107; }
    .status-remaining { background-color: #17a2b8; }
    .status-overbudget { background-color: #dc3545; }

    .utilization-bar {
      width: 100%;
      height: 20px;
      background-color: #e9ecef;
      border-radius: 10px;
      overflow: hidden;
      margin: 5px 0;
    }

    .utilization-fill {
      height: 100%;
      background: linear-gradient(90deg, #28a745 0%, #ffc107 70%, #dc3545 100%);
      transition: width 0.3s ease;
    }

    .currency-breakdown {
      margin-top: 20px;
    }

    .currency-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 15px;
      margin-top: 15px;
    }

    .currency-item {
      background: #f8f9fa;
      padding: 15px;
      border-radius: 5px;
      border: 1px solid #dee2e6;
      text-align: center;
    }

    .currency-header {
      font-weight: bold;
      color: #495057;
      margin-bottom: 10px;
    }

    .currency-amount {
      font-size: 18px;
      color: #007bff;
      font-weight: bold;
    }

    .category-grouping {
      margin-top: 30px;
    }

    .category-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      margin-top: 15px;
    }

    .category-card {
      background: #fff;
      border: 1px solid #dee2e6;
      border-radius: 8px;
      overflow: hidden;
    }

    .category-header {
      background: #f8f9fa;
      padding: 15px;
      border-bottom: 1px solid #dee2e6;
    }

    .category-name {
      font-weight: bold;
      color: #495057;
      font-size: 16px;
    }

    .category-body {
      padding: 15px;
    }

    .category-stats {
      display: flex;
      justify-content: space-between;
      margin-bottom: 15px;
    }

    .category-stat {
      text-align: center;
    }

    .category-stat-value {
      font-size: 18px;
      font-weight: bold;
      color: #007bff;
    }

    .category-stat-label {
      font-size: 12px;
      color: #666;
      text-transform: uppercase;
    }

    .opex-table-section {
      margin-top: 30px;
    }

    .opex-dashboard {
      width: 100%;
      border-collapse: collapse;
    }

    .opex-dashboard th,
    .opex-dashboard td {
      padding: 8px 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    .opex-dashboard th {
      background-color: #f5f5f5;
      font-weight: bold;
      color: #333;
    }

    .opex-dashboard tr:hover {
      background-color: #f9f9f9;
    }

    /* Column width adjustments */
    .opex-dashboard .opex-code {
      width: 12%;
    }

    .opex-dashboard .category {
      width: 12%;
    }

    .opex-dashboard .description {
      width: 22%;
    }

    .opex-dashboard .budget,
    .opex-dashboard .utilized,
    .opex-dashboard .remaining {
      width: 12%;
    }

    .opex-dashboard .utilization {
      width: 10%;
    }

    .opex-dashboard .linked-prs {
      width: 8%;
    }

    .opex-dashboard .buttons {
      width: 140px;
      min-width: 140px;
    }

    .text-danger {
      color: #dc3545 !important;
    }

    .currency-code {
      font-size: 11px;
      color: #777;
      background-color: #f5f5f5;
      padding: 1px 4px;
      border-radius: 2px;
      margin-left: 3px;
    }

    .utilization-text {
      font-size: 12px;
      margin-left: 5px;
    }

    .pr-link {
      color: #007bff;
      text-decoration: none;
    }

    .pr-link:hover {
      text-decoration: underline;
    }

    .no-prs {
      color: #999;
    }

    .no-opex-data {
      text-align: center;
      padding: 40px;
      background: #f9f9f9;
      border-radius: 8px;
      border: 1px solid #e0e0e0;
    }

    .conversion-note {
      font-size: 11px;
      color: #888;
      font-style: italic;
      display: block;
      margin-top: 3px;
    }

    /* Actions column styling */
    .buttons {
      width: 140px;
      min-width: 140px;
      text-align: left;
      white-space: nowrap;
      padding-left: 8px !important;
    }

    .buttons a {
      display: inline-block;
      margin: 0 6px 2px 0;
      padding: 4px 8px;
      border-radius: 3px;
      text-decoration: none;
      transition: background-color 0.2s ease;
      font-size: 11px;
      border: 1px solid transparent;
      line-height: 1.2;
    }

    .buttons a:hover {
      background-color: #e6f3ff;
      border-color: #b3d9ff;
    }

    .buttons .icon {
      width: 12px;
      height: 12px;
      background-repeat: no-repeat;
      background-position: center;
      margin-right: 4px;
      display: inline-block;
      vertical-align: middle;
    }

    /* Ensure actions wrap to new line if needed */
    .buttons {
      line-height: 1.4;
    }

    /* Native Chart Styles for OPEX */
    .opex-chart {
      margin: 15px 0;
      padding: 10px;
      background: #f9f9f9;
      border-radius: 5px;
    }

    .opex-donut-container {
      display: flex;
      align-items: center;
      gap: 20px;
      margin: 10px 0;
    }

    .opex-donut {
      width: 140px;
      height: 140px;
      position: relative;
    }

    .opex-donut-center {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      font-size: 12px;
      color: #333;
    }

    .opex-bar-chart {
      display: flex;
      align-items: flex-end;
      height: 120px;
      margin: 10px 0;
      padding: 10px;
      background: white;
      border: 1px solid #ddd;
      border-radius: 3px;
      gap: 8px;
    }

    .opex-quarter-bar {
      background: linear-gradient(to top, #28a745, #20c997);
      border-radius: 3px 3px 0 0;
      position: relative;
      flex: 1;
      min-height: 10px;
      transition: all 0.3s ease;
    }

    .opex-quarter-bar:hover {
      background: linear-gradient(to top, #20c997, #17a2b8);
      transform: scaleY(1.05);
    }

    .opex-quarter-label {
      position: absolute;
      bottom: -20px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 11px;
      color: #666;
      font-weight: bold;
    }

    .opex-quarter-value {
      position: absolute;
      top: -25px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 10px;
      color: #333;
      white-space: nowrap;
    }

    @media (max-width: 768px) {
      .summary-stats {
        flex-direction: column;
      }
      
      .stat-box {
        margin: 5px 0;
      }
      
      .dashboard-container {
        grid-template-columns: 1fr;
      }
    }
  </style>
<% end %>

