<h2><%= l(:label_new_status) %></h2>

<%= form_for @status, url: purchase_request_statuses_path do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <p>
    <%= f.submit l(:button_create) %>
    <%= link_to l(:button_cancel), plugin_settings_path('redmine_purchase_requests', tab: 'statuses') %>
  </p>
<% end %>

<%= link_to l(:button_back), purchase_request_statuses_path, class: 'icon icon-back' %>