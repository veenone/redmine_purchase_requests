<h1>Purchase Requests Dashboard</h1>

<div class="dashboard">
  <h2>Status Overview</h2>
  <table>
    <thead>
      <tr>
        <th>Status</th>
        <th>Count</th>
      </tr>
    </thead>
    <tbody>
      <% @purchase_request_statuses.each do |status| %>
        <tr>
          <td><%= status.name %></td>
          <td><%= status.purchase_requests.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>Recent Purchase Requests</h2>
  <ul>
    <% @recent_purchase_requests.each do |request| %>
      <li>
        <strong><%= request.title %></strong> - <%= request.status.name %>
        <%= link_to 'View', purchase_request_path(request) %>
      </li>
    <% end %>
  </ul>
</div>