    gap: 15px;
  }
  
  .status-badge {
    display: inline-block;
    padding: 3px 8px;
    border-radius: 3px;
    color: white;
    font-size: 12px;
  }
  
  .last-updated {
    color: #666;
    font-size: 0.9em;
  }
  
  .purchase-request-title {
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 1px solid #eee;
  }
  
  .purchase-request-title h3 {
    margin: 0;
    color: #333;
  }
  
  .required {
    color: #d00;
    font-weight: bold;
  }
  
  .currency-wrapper {
    position: relative;
    display: inline-block;
  }
  
  .currency-symbol {
    position: absolute;
    top: 50%;
