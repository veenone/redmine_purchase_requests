    transform: translateY(-50%);
    color: #666;
  }
  
  .currency-field {
    padding-left: 25px;
  }
  
  .button-highlight {
    opacity: 0.8;
  }
  
  .existing-attachments {
    margin-top: 15px;
    padding: 10px;
    background-color: #f9f9f9;
    border-radius: 3px;
  }
  
  .form-actions {
    margin-top: 20px;
    padding-top: 15px;
    border-top: 1px solid #eee;
  }
  
  .button-positive {
    background-color: #4CAF50;
    color: white;
    padding: 6px 12px;
    border: none;
    border-radius: 3px;
    cursor: pointer;
    font-weight: bold;
  }
  
