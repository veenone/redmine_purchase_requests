<%# filepath: /opt/redmine/plugins/redmine_purchase_requests/app/views/reports/purchase_requests.html.erb %>
<% content_for :header_tags do %>
  <%= stylesheet_link_tag 'purchase_requests', plugin: 'redmine_purchase_requests' %>
  <%= javascript_include_tag 'purchase_requests', plugin: 'redmine_purchase_requests' %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<% end %>

<% html_title("Purchase Requests Report#{@project ? " - #{@project.name}" : ""}") %>

<% unless @print_mode %>
<div class="contextual">
  <% reports_index_path = @project ? project_reports_path(@project) : reports_path %>
  <%= link_to reports_index_path, class: 'pr-button pr-button-secondary pr-button-icon' do %>
    <span class="icon icon-cancel">Back to Reports</span>
  <% end %>
  
  <% report_path_base = @project ? 
       purchase_requests_project_reports_path(@project) : 
       purchase_requests_reports_path %>
  
  <%= link_to "#{report_path_base}?format=pdf", class: 'pr-button pr-button-primary pr-button-icon', target: '_blank' do %>
    <span class="icon icon-pdf">Export PDF</span>
  <% end %>
  
  <%= link_to "#{report_path_base}?format=csv", class: 'pr-button pr-button-outline pr-button-icon' do %>
    <span class="icon icon-csv-file">Export CSV</span>
  <% end %>
</div>
<% end %>

<h2>
  Purchase Requests Report
  <% if @project %>
    <span class="project-badge"><%= @project.name %></span>
  <% end %>
</h2>

<div class="report-meta">
  <p><strong>Generated:</strong> <%= @report_data[:generated_at].strftime('%B %d, %Y at %I:%M %p') %></p>
  <% if @project %>
    <p><strong>Scope:</strong> Project-specific data for <%= @project.name %></p>
  <% else %>
    <p><strong>Scope:</strong> System-wide data across all projects</p>
  <% end %>
</div>

<!-- Executive Summary -->
<div class="report-section">
  <h3>Executive Summary</h3>
  
  <div class="summary-cards">
    <div class="summary-card">
      <div class="card-icon"><span class="icon icon-package"></span></div>
      <div class="card-content">
        <div class="card-value"><%= @report_data[:summary][:total_count] %></div>
        <div class="card-label">Total Requests</div>
      </div>
    </div>
    
    <div class="summary-card open">
      <div class="card-icon"><span class="icon icon-time"></span></div>
      <div class="card-content">
        <div class="card-value"><%= @report_data[:summary][:open_count] %></div>
        <div class="card-label">Open Requests</div>
      </div>
    </div>
    
    <div class="summary-card closed">
      <div class="card-icon"><span class="icon icon-checked"></span></div>
      <div class="card-content">
        <div class="card-value"><%= @report_data[:summary][:closed_count] %></div>
        <div class="card-label">Closed Requests</div>
      </div>
    </div>
    
    <div class="summary-card financial">
      <div class="card-icon"><span class="icon icon-money"></span></div>
      <div class="card-content">
        <div class="card-value">$<%= number_with_delimiter(@report_data[:summary][:total_estimated_value].round(2)) %></div>
        <div class="card-label">Total Est. Value</div>
      </div>
    </div>
  </div>
</div>

<!-- Status Analysis -->
<div class="report-section">
  <h3>Status Distribution</h3>
  
  <div class="chart-container">
    <canvas id="statusChart" width="400" height="200"></canvas>
  </div>
  
  <div class="data-table">
    <table class="list">
      <thead>
        <tr>
          <th>Status</th>
          <th>Count</th>
          <th>Percentage</th>
        </tr>
      </thead>
      <tbody>
        <% total = @report_data[:status_breakdown].values.sum %>
        <% @report_data[:status_breakdown].each do |status, count| %>
          <tr>
            <td><%= status %></td>
            <td><%= count %></td>
            <td><%= total > 0 ? "#{((count.to_f / total) * 100).round(1)}%" : "0%" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Priority Analysis -->
<div class="report-section">
  <h3>Priority Distribution</h3>
  
  <div class="chart-container">
    <canvas id="priorityChart" width="400" height="200"></canvas>
  </div>
  
  <div class="priority-breakdown">
    <% @report_data[:priority_breakdown].each do |priority, count| %>
      <div class="priority-item priority-<%= priority %>">
        <span class="priority-label"><%= priority.capitalize %></span>
        <span class="priority-count"><%= count %></span>
      </div>
    <% end %>
  </div>
</div>

<!-- Monthly Trend -->
<div class="report-section">
  <h3>Monthly Creation Trend (Last 12 Months)</h3>
  
  <div class="chart-container">
    <canvas id="trendChart" width="400" height="200"></canvas>
  </div>
</div>

<!-- Vendor Analysis -->
<% if @report_data[:vendor_stats].any? %>
<div class="report-section">
  <h3>Top Vendors by Request Count</h3>
  
  <div class="vendor-stats">
    <% @report_data[:vendor_stats].each_with_index do |(vendor_info, count), index| %>
      <div class="vendor-stat-item">
        <span class="vendor-rank">#<%= index + 1 %></span>
        <span class="vendor-name"><%= vendor_info.first %></span>
        <span class="vendor-count"><%= count %> requests</span>
      </div>
    <% end %>
  </div>
</div>
<% end %>

<!-- Recent Requests -->
<div class="report-section">
  <h3>Recent Purchase Requests</h3>
  
  <div class="autoscroll">
    <table class="list recent-requests">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Project</th>
          <th>Status</th>
          <th>Priority</th>
          <th>Est. Price</th>
          <th>Created</th>
        </tr>
      </thead>
      <tbody>
        <% @report_data[:recent_requests].each do |request| %>
          <tr>
            <td><%= request.id %></td>
            <td><%= truncate(request.title, length: 50) %></td>
            <td><%= request.project&.name %></td>
            <td>
              <span class="status-badge">
                <%= request.status&.name %>
              </span>
            </td>
            <td>
              <span class="priority-badge priority-<%= request.priority %>">
                <%= request.priority&.capitalize %>
              </span>
            </td>
            <td>
              <% if request.estimated_price %>
                <%= request.currency %> <%= number_with_delimiter(request.estimated_price) %>
              <% else %>
                -
              <% end %>
            </td>
            <td><%= request.created_at.strftime('%Y-%m-%d') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Status Chart
  const statusCtx = document.getElementById('statusChart').getContext('2d');
  new Chart(statusCtx, {
    type: 'doughnut',
    data: {
      labels: <%= raw @report_data[:status_breakdown].keys.to_json %>,
      datasets: [{
        data: <%= raw @report_data[:status_breakdown].values.to_json %>,
        backgroundColor: [
          '#4CAF50', '#2196F3', '#FF9800', '#F44336', '#9C27B0', '#607D8B'
        ]
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'right'
        }
      }
    }
  });
  
  // Priority Chart
  const priorityCtx = document.getElementById('priorityChart').getContext('2d');
  new Chart(priorityCtx, {
    type: 'bar',
    data: {
      labels: <%= raw @report_data[:priority_breakdown].keys.map(&:capitalize).to_json %>,
      datasets: [{
        label: 'Requests',
        data: <%= raw @report_data[:priority_breakdown].values.to_json %>,
        backgroundColor: ['#4CAF50', '#2196F3', '#FF9800', '#F44336']
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false
        }
      },
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
  
  // Trend Chart
  const trendCtx = document.getElementById('trendChart').getContext('2d');
  new Chart(trendCtx, {
    type: 'line',
    data: {
      labels: <%= raw @report_data[:monthly_trend].keys.map { |date| date.strftime('%b %Y') }.to_json %>,
      datasets: [{
        label: 'Purchase Requests Created',
        data: <%= raw @report_data[:monthly_trend].values.to_json %>,
        borderColor: '#2196F3',
        backgroundColor: 'rgba(33, 150, 243, 0.1)',
        tension: 0.4,
        fill: true
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false
        }
      },
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
});
</script>

