<%# filepath: /opt/redmine/plugins/redmine_purchase_requests/app/views/reports/vendors.html.erb %>
<% content_for :header_tags do %>
  <%= stylesheet_link_tag 'purchase_requests', plugin: 'redmine_purchase_requests' %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<% end %>

<% html_title("Vendors Report#{@project ? " - #{@project.name}" : ""}") %>

<% unless @print_mode %>
<div class="contextual">
  <% reports_index_path = @project ? project_reports_path(@project) : reports_path %>
  <%= link_to reports_index_path, class: 'pr-button pr-button-secondary pr-button-icon' do %>
    <span class="icon icon-cancel">Back to Reports</span>
  <% end %>
  
  <% report_path_base = @project ? 
       vendors_project_reports_path(@project) : 
       vendors_reports_path %>
  
  <%= link_to "#{report_path_base}?format=pdf", class: 'pr-button pr-button-primary pr-button-icon', target: '_blank' do %>
    <span class="icon icon-pdf">Export PDF</span>
  <% end %>
  
  <%= link_to "#{report_path_base}?format=csv", class: 'pr-button pr-button-outline pr-button-icon' do %>
    <span class="icon icon-csv-file">Export CSV</span>
  <% end %>
</div>
<% end %>

<h2>
  Vendors Report
  <% if @project %>
    <span class="project-badge"><%= @project.name %></span>
  <% end %>
</h2>

<div class="report-meta">
  <p><strong>Generated:</strong> <%= @report_data[:generated_at].strftime('%B %d, %Y at %I:%M %p') %></p>
  <% if @project %>
    <p><strong>Scope:</strong> Vendors available for <%= @project.name %> (including global vendors)</p>
  <% else %>
    <p><strong>Scope:</strong> All vendors across the system</p>
  <% end %>
</div>

<!-- Executive Summary -->
<div class="report-section">
  <h3>Vendor Overview</h3>
  
  <div class="summary-cards">
    <div class="summary-card">
      <div class="card-icon"><span class="icon icon-group"></span></div>
      <div class="card-content">
        <div class="card-value"><%= @report_data[:summary][:total_count] %></div>
        <div class="card-label">Total Vendors</div>
      </div>
    </div>
    
    <div class="summary-card active">
      <div class="card-icon"><span class="icon icon-checked"></span></div>
      <div class="card-content">
        <div class="card-value"><%= @report_data[:summary][:active_count] %></div>
        <div class="card-label">Active Vendors</div>
      </div>
    </div>
    
    <div class="summary-card global">
      <div class="card-icon"><span class="icon icon-world"></span></div>
      <div class="card-content">
        <div class="card-value"><%= @report_data[:summary][:global_count] %></div>
        <div class="card-label">Global Vendors</div>
      </div>
    </div>
    
    <div class="summary-card engaged">
      <div class="card-icon"><span class="icon icon-package"></span></div>
      <div class="card-content">
        <div class="card-value"><%= @report_data[:summary][:vendors_with_requests] %></div>
        <div class="card-label">With Purchase Requests</div>
      </div>
    </div>
  </div>
</div>

<!-- Vendor Activity -->
<div class="report-section">
  <h3>Top Active Vendors</h3>
  
  <div class="vendor-activity-chart">
    <canvas id="vendorActivityChart" width="400" height="300"></canvas>
  </div>
  
  <div class="vendor-activity-list">
    <% @report_data[:vendor_activity].each_with_index do |(vendor_info, count), index| %>
      <div class="vendor-activity-item">
        <span class="vendor-rank">#<%= index + 1 %></span>
        <div class="vendor-details">
          <div class="vendor-name"><%= vendor_info[1] %></div>
          <div class="vendor-requests"><%= count %> purchase requests</div>
        </div>
        <div class="activity-bar">
          <div class="activity-fill" style="width: <%= count > 0 ? [(count.to_f / @report_data[:vendor_activity].first[1] * 100), 100].min : 0 %>%"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Project Distribution (Global View Only) -->
<% if @project.nil? && @report_data[:project_distribution] %>
<div class="report-section">
  <h3>Project-Specific Vendor Distribution</h3>
  
  <div class="chart-container">
    <canvas id="projectDistributionChart" width="400" height="200"></canvas>
  </div>
  
  <div class="distribution-stats">
    <% @report_data[:project_distribution].each do |project, count| %>
      <div class="distribution-item">
        <span class="project-name"><%= project %></span>
        <span class="project-count"><%= count %> vendors</span>
      </div>
    <% end %>
  </div>
</div>
<% end %>

<!-- Vendor Status Analysis -->
<div class="report-section">
  <h3>Vendor Status & Engagement Analysis</h3>
  
  <div class="status-analysis">
    <div class="status-chart">
      <canvas id="statusChart" width="300" height="300"></canvas>
    </div>
    
    <div class="status-details">
      <div class="status-detail-item">
        <div class="status-label">Active Vendors</div>
        <div class="status-value"><%= @report_data[:summary][:active_count] %></div>
        <div class="status-percentage">
          <%= @report_data[:summary][:total_count] > 0 ? 
                "#{((@report_data[:summary][:active_count].to_f / @report_data[:summary][:total_count]) * 100).round(1)}%" : 
                "0%" %>
        </div>
      </div>
      
      <div class="status-detail-item">
        <div class="status-label">With Purchase Requests</div>
        <div class="status-value"><%= @report_data[:summary][:vendors_with_requests] %></div>
        <div class="status-percentage">
          <%= @report_data[:summary][:total_count] > 0 ? 
                "#{((@report_data[:summary][:vendors_with_requests].to_f / @report_data[:summary][:total_count]) * 100).round(1)}%" : 
                "0%" %>
        </div>
      </div>
      
      <div class="status-detail-item">
        <div class="status-label">Inactive/Unused</div>
        <div class="status-value"><%= @report_data[:summary][:vendors_without_requests] %></div>
        <div class="status-percentage">
          <%= @report_data[:summary][:total_count] > 0 ? 
                "#{((@report_data[:summary][:vendors_without_requests].to_f / @report_data[:summary][:total_count]) * 100).round(1)}%" : 
                "0%" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Recent Vendors -->
<div class="report-section">
  <h3>Recently Added Vendors</h3>
  
  <div class="autoscroll">
    <table class="list recent-vendors">
      <thead>
        <tr>
          <th>Name</th>
          <th>Vendor ID</th>
          <th>Contact</th>
          <th>Scope</th>
          <th>Status</th>
          <th>Requests</th>
          <th>Added</th>
        </tr>
      </thead>
      <tbody>
        <% @report_data[:recent_vendors].each do |vendor| %>
          <tr>
            <td><strong><%= vendor.name %></strong></td>
            <td><%= vendor.vendor_id %></td>
            <td>
              <% if vendor.contact_person.present? %>
                <%= vendor.contact_person %>
                <% if vendor.email.present? %>
                  <br><small><%= vendor.email %></small>
                <% end %>
              <% elsif vendor.email.present? %>
                <%= vendor.email %>
              <% else %>
                -
              <% end %>
            </td>
            <td>
              <span class="scope-badge <%= vendor.project_id? ? 'project' : 'global' %>">
                <%= vendor.project_id? ? 'Project' : 'Global' %>
              </span>
            </td>
            <td>
              <span class="status-badge <%= vendor.is_active? ? 'active' : 'inactive' %>">
                <%= vendor.is_active? ? 'Active' : 'Inactive' %>
              </span>
            </td>
            <td><%= vendor.purchase_requests.count %></td>
            <td><%= vendor.created_at.strftime('%Y-%m-%d') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% unless @print_mode %>
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Vendor Activity Chart
  const activityData = <%= raw @report_data[:vendor_activity].map { |info, count| [info[1], count] }.to_json %>;
  const activityCtx = document.getElementById('vendorActivityChart').getContext('2d');
  
  new Chart(activityCtx, {
    type: 'horizontalBar',
    data: {
      labels: activityData.map(item => item[0]).slice(0, 10),
      datasets: [{
        label: 'Purchase Requests',
        data: activityData.map(item => item[1]).slice(0, 10),
        backgroundColor: 'rgba(54, 162, 235, 0.6)',
        borderColor: 'rgba(54, 162, 235, 1)',
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false
        }
      },
      scales: {
        x: {
          beginAtZero: true
        }
      }
    }
  });
  
  // Status Chart
  const statusCtx = document.getElementById('statusChart').getContext('2d');
  const statusData = [
    <%= @report_data[:summary][:vendors_with_requests] %>,
    <%= @report_data[:summary][:vendors_without_requests] %>
  ];
  
  new Chart(statusCtx, {
    type: 'doughnut',
    data: {
      labels: ['With Requests', 'Without Requests'],
      datasets: [{
        data: statusData,
        backgroundColor: ['#4CAF50', '#FF9800']
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'bottom'
        }
      }
    }
  });
  
  <% if @project.nil? && @report_data[:project_distribution] %>
  // Project Distribution Chart
  const projDistCtx = document.getElementById('projectDistributionChart').getContext('2d');
  new Chart(projDistCtx, {
    type: 'bar',
    data: {
      labels: <%= raw @report_data[:project_distribution].keys.to_json %>,
      datasets: [{
        label: 'Project-Specific Vendors',
        data: <%= raw @report_data[:project_distribution].values.to_json %>,
        backgroundColor: 'rgba(153, 102, 255, 0.6)',
        borderColor: 'rgba(153, 102, 255, 1)',
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false
        }
      },
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
  <% end %>
});
</script>
<% end %>

