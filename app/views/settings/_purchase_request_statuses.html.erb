<h3><%= l(:label_purchase_request_statuses) %></h3>

<table class="list">
  <thead>
    <tr>
      <th><%= l(:label_status_name) %></th>
      <th><%= l(:label_status_position) %></th>
      <th><%= l(:label_status_is_closed) %></th>
      <th><%= l(:label_status_color) %></th>
      <th><%= l(:label_status_is_default) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% PurchaseRequestStatus.order(:position).each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= status.position %></td>
        <td><%= checked_image status.is_closed? %></td>
        <td style="background-color: <%= status.color.presence || '#777777' %>"></td>
        <td class="is-default">
          <%= checked_image status.is_default? %>
        </td>
        <td class="buttons">
          <%= link_to l(:button_edit), edit_purchase_request_status_path(status), class: 'icon icon-edit' %>
          <%= link_to l(:button_delete), purchase_request_status_path(status), 
                method: :delete, 
                class: 'icon icon-del', 
                data: {confirm: l(:text_are_you_sure)} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to l(:label_new_status), new_purchase_request_status_path, class: 'icon icon-add' %></p>