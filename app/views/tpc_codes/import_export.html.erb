  .import-export-help {
    margin-top: 30px;
    background: #f8f9fa;
    padding: 20px;
    border-radius: 6px;
  }
  
  .import-export-help h3 {
    margin-top: 0;
    color: #333;
  }
  
  .help-section {
    margin-bottom: 20px;
  }
  
  .help-section h4 {
    color: #007bff;
    margin-bottom: 10px;
  }
  
  .help-section ul {
    margin-bottom: 0;
    padding-left: 20px;
  }
  
  @media (max-width: 768px) {
    .import-export-container {
      grid-template-columns: 1fr;
    }
  }
</style>
<% end %>
