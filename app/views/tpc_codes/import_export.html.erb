  }
  
  .file-label {
    display: inline-block;
    padding: 10px 20px;
    background: #fff;
    border: 2px dashed #007bff;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    text-align: center;
